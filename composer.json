{
  "name": "jane-olszewska/itinerant",
  "type": "library",
  "require": {
    "php": ">=7.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0",
    "squizlabs/php_codesniffer": "^2.8",
    "phpstan/phpstan": "^0.9.2",
    "phpmetrics/phpmetrics": "^2.3",
    "php-ds/php-ds": "^1.2"
  },
  "suggest": {
    "ext-ds": "ExpressionStack performance improves when \\Ds\\Stack is available"
  },
  "scripts": {
    "ci": [
      "bin/phpcs",
      "bin/phpstan analyze --level max ./src",
      "bin/phpunit --testsuite unit --testdox"
    ],
    "test": [
      "bin/phpunit --testsuite unit"
    ],
    "metrics": [
      "bin/phpmetrics --report-html=var/phpmetrics ./src && open var/phpmetrics/index.html"
    ]
  },
  "autoload": {
    "psr-4": {
      "JaneOlszewska\\Itinerant\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "JaneOlszewska\\Tests\\Itinerant\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "config": {
    "bin-dir": "bin",
    "platform": {
      "php": "7.1"
    }
  }
}
